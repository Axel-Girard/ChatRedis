  head
    title= "Real time web chat"
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet")
    script(src='https://code.jquery.com/jquery-2.2.0.min.js')
    script(src='/chat.js')
